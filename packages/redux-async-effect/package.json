{
  "name": "redux-async-effect",
  "version": "0.6.0",
  "description": "Consume a stream and emit Redux actions with an async function/method or generator",
  "main": "lib/index.js",
  "module": "lib-esm/index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "build": "cd src && tsc --p ./tsconfig.lib.json && tsc --p ./tsconfig.lib.json -m es6 --outDir ../lib-esm",
    "test": "jest",
    "format": "prettier --write \"src/**/*.ts\"",
    "prepare": "npm run build",
    "prepublishOnly": "npm test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mascarenhas/async-effects.git"
  },
  "keywords": [
    "redux-observable",
    "epics",
    "async",
    "effects",
    "sagas",
    "generators"
  ],
  "author": "Fabio Mascarenhas <fabio.mascarenhas@rangle.io>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/mascarenhas/async-effects/issues"
  },
  "homepage": "https://github.com/mascarenhas/async-effects#readme",
  "peerDependencies": {
    "rxjs": "^6.0.0",
    "typescript": ">=3.1"
  },
  "devDependencies": {
    "@types/jest": "^24.0.11",
    "jest": "^24.7.1",
    "prettier": "^1.16.4",
    "rxjs": "^6.4.0",
    "ts-jest": "^24.0.1",
    "typescript": "~3.2.4"
  },
  "files": [
    "lib",
    "lib-esm",
    "src",
    "LICENSE"
  ],
  "jest": {
    "preset": "ts-jest",
    "globals": {
      "ts-jest": {
        "tsConfig": "./src/tsconfig.spec.json"
      }
    }
  },
  "ngPackage": {
    "lib": {
      "entryFile": "public_api.ts"
    }
  }
}
