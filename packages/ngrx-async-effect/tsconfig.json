{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "importHelpers": true,
    "outDir": "./lib",
    "strict": true,
    "sourceMap": true,
    "declaration": true,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "downlevelIteration": true,
    "target": "es5",
    "typeRoots": [
      "node_modules/@types"
    ],
    "types": ["jest"],
    "lib": [
      "esnext",
      "dom"
    ],
    "paths": {
      "redux-async-effect": ["../redux-async-effect/src"]
    },
    "composite": true
  },
  "references": [
    { "path": "../redux-async-effect" }
  ],
  "exclude": [
    "lib",
    "node_modules",
    "*.spec.ts",
    "**/*.spec.ts"
  ]
}
